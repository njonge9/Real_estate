

<main class="form-signin w-100 m-auto">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
     <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

     <div class="form-floating">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "floatingInput"%>
      <%= f.label :first_name %>
    </div>

     <div class="form-floating mt-2">
      <%= f.text_field :last_name, autofocus: true,  class: "form-control", id: "floatingInput"%>
      <%= f.label :last_name %>
    </div>

    <div class="form-floating mt-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", id: "floatingInput"%>
      <%= f.label :email %>
    </div>

    <div class="form-floating mt-2">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingPassword"%>
      <%= f.label :password %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingPassword" %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" , class: "btn btn-primary w-100 py-2"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>


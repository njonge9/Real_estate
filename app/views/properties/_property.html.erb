<div class="property_photo" style="background-size: cover;height:600px; background-image: url(<%= rails_blob_url(property_photo_url(@property))%>)"%>
  <div class="photo-overlay"></div>
</div>

<div id="<%= dom_id property %>" class="container mt-5">
  <div class="row">
    <div class="col-8">
      <div class="col-6">
        <p><%= property.address %></p>
        <p>For sale</p>
      </div>
      <div class="col-6">
        <div class="">
          <%= property.rooms %>
        </div>
        <div>
          <%= property.baths %>
        </div>
        <div>
          <%= property.parking_space%>
        </div>
      </div>
      <div class="row">
        <div class="col">

          <p>
            <strong>Name:</strong>
            <%= property.name %>
          </p>

          <p>
            <strong>Address:</strong>
            <%= property.address %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= property.price %>
          </p>

          <p>
            <strong>Rooms:</strong>
            <%= property.rooms %>
          </p>

          <p>
            <strong>Bathrooms:</strong>
            <%= property.bathrooms %>
          </p>
        </div>
    </div>
      </div>
    <div class="col-4">
      <%= render "properties/agent_details"%>
    </div>
  </div>

</div>
